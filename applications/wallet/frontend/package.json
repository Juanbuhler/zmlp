{
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "build": "next build",
    "dev": "node -r esm devServer.js",
    "dev:mocked": "MOCKED=true node -r esm devServer.js",
    "dev:staging": "STAGING=true node -r esm devServer.js",
    "lint": "eslint '{pages,src}/**/*.js'",
    "prod": "next build && next start",
    "size": "rimraf .next && next build && bundlesize",
    "start": "next start",
    "test": "TZ=UTC jest --watch --notify --verbose --no-cache",
    "test:cover": "TZ=UTC jest --coverage --verbose --no-cache",
    "test:hook": "TZ=UTC jest --bail --findRelatedTests --no-cache"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.svg$": "<rootDir>/__mocks__/svg.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint",
      "npm run test:hook"
    ]
  },
  "bundlesize": [
    {
      "//": "framework",
      "path": ".next/static/chunks/framework**.js",
      "maxSize": "40 kB"
    },
    {
      "//": "dependencies",
      "path": ".next/static/chunks/commons**.js",
      "maxSize": "11 kB"
    },
    {
      "//": "app.js",
      "path": ".next/static/**/pages/_app.js",
      "maxSize": "24 kB"
    },
    {
      "//": "main runtime",
      "path": ".next/static/runtime/main**.js",
      "maxSize": "6 kB"
    },
    {
      "//": "error page",
      "path": ".next/static/**/pages/_error.js",
      "maxSize": "2 kB"
    },
    {
      "//": "polyfill & webpack runtime",
      "path": ".next/static/runtime/[polyfill|webpack]**.js",
      "maxSize": "26 kB"
    },
    {
      "//": "all pages and chunks",
      "path": ".next/static/**/!(framework|commons|_app|_error|main|polyfill|webpack)*.js",
      "maxSize": "12 kB"
    }
  ],
  "dependencies": {
    "@emotion/babel-preset-css-prop": "10.0.27",
    "@emotion/core": "10.0.28",
    "@sentry/browser": "5.15.4",
    "@svgr/webpack": "5.3.1",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "body-scroll-lock": "3.0.1",
    "dotenv": "8.2.0",
    "focus-visible": "5.1.0",
    "jwt-decode": "2.2.0",
    "next": "9.3.4",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-aria-modal": "4.0.0",
    "react-dom": "16.13.1",
    "react-json-pretty": "2.2.0",
    "swr": "0.2.0"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "babel-jest": "25.2.6",
    "babel-plugin-macros": "2.8.0",
    "bundlesize": "0.18.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-emotion": "10.0.27",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "esm": "3.2.25",
    "express": "4.17.1",
    "http-proxy-middleware": "1.0.3",
    "husky": "4.2.3",
    "import-all.macro": "3.0.0",
    "jest": "25.2.7",
    "jest-emotion": "10.0.32",
    "jest-fetch-mock": "3.0.3",
    "lint-staged": "10.1.2",
    "morgan": "1.10.0",
    "prettier": "2.0.4",
    "react-test-renderer": "16.13.1",
    "webpack-bundle-analyzer": "3.6.1"
  }
}
