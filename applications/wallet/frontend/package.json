{
  "private": true,
  "engines": {
    "node": ">= 16",
    "npm": ">= 7"
  },
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "build": "next build",
    "dev": "node -r esm devServer.js",
    "dev:mocked": "MOCKED=true node -r esm devServer.js",
    "dev:staging": "STAGING=true node -r esm devServer.js",
    "lint": "eslint '{pages,src}/**/*.js'",
    "prod": "next build && next start",
    "start": "next start",
    "test": "TZ=UTC jest --watch --notify --verbose --no-cache",
    "test:cover": "TZ=UTC jest --coverage",
    "test:hook": "TZ=UTC jest --bail --findRelatedTests --no-cache",
    "test:decache": "jest --clearCache"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version",
    "last 1 Safari version"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.svg$": "<rootDir>/__mocks__/svg.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "npm run test:hook"
    ]
  },
  "dependencies": {
    "@emotion/babel-preset-css-prop": "11.2.0",
    "@emotion/react": "11.4.0",
    "@reach/combobox": "0.16.0",
    "@reach/listbox": "0.16.0",
    "@reach/skip-nav": "0.16.0",
    "@sentry/browser": "6.10.0",
    "@svgr/webpack": "5.5.0",
    "@tippyjs/react": "4.2.5",
    "body-scroll-lock": "3.1.5",
    "camelcase": "6.2.0",
    "deep-filter": "1.0.2",
    "dotenv": "10.0.0",
    "focus-visible": "5.2.0",
    "next": "11.0.1",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-aria-modal": "4.0.0",
    "react-compound-slider": "3.3.1",
    "react-dom": "17.0.2",
    "react-grid-layout": "1.2.5",
    "react-json-pretty": "2.2.0",
    "react-resizable": "3.0.4",
    "react-virtualized-auto-sizer": "1.0.5",
    "react-window": "1.8.6",
    "react-window-infinite-loader": "1.0.7",
    "swr": "0.5.6",
    "use-resize-observer": "7.0.1",
    "utf8": "3.0.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "11.2.0",
    "@emotion/jest": "11.3.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.0.5",
    "babel-plugin-dynamic-import-node": "2.3.3",
    "babel-plugin-macros": "3.1.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "esm": "3.2.25",
    "express": "4.17.1",
    "http-proxy-middleware": "2.0.0",
    "husky": "4.3.8",
    "import-all.macro": "3.1.0",
    "jest": "27.0.5",
    "jest-fetch-mock": "3.0.3",
    "lint-staged": "11.1.2",
    "morgan": "1.10.0",
    "node-notifier": "10.0.0",
    "prettier": "2.3.2",
    "react-test-renderer": "17.0.2",
    "webpack-bundle-analyzer": "4.4.2"
  }
}
