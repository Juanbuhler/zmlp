{
  "settings" : {
    "analysis" : {
      "analyzer" : {
        "stem" : {
          "tokenizer" : "standard",
          "filter" : ["standard", "lowercase", "stop", "porter_stem"]
          }
        }
    }
  },
  "mappings" : {
    "ingest": {
      "dynamic" : false,
      "properties": {
        "timeCreated" : {
          "type" : "date"
        },
        "timeModified" : {
          "type" : "date"
        },
        "paths" : {
          "type" : "string",
          "index" : "not_analyzed"
        },
        "fileTypes" : {
          "type" : "string",
          "index" : "not_analyzed"
        }
      }
    },
    "asset" : {
      "dynamic" : true,
      "properties" : {
        "timeCreated" : {
           "type" : "date"
        },
        "timeModified" : {
          "type" : "date"
        },
        "userCreated" : {
         "type" : "string",
         "index": "not_analyzed"
        },
        "userModified" : {
          "type" : "string",
          "index" : "not_analyzed"
        },
        "source" : {
          "type" : "object",
          "properties" : {
            "path": {
              "type": "string"
            },
            "size" : {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
