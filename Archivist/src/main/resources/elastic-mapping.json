{
  "settings" : {
    "analysis" : {
      "analyzer" : {
        "stem" : {
          "tokenizer" : "standard",
          "filter" : ["standard", "lowercase", "stop", "porter_stem"]
          }
        }
    }
  },

  "mappings" : {
    "proxy-config": {
      "dynamic" : true,
      "properties": {
        "outputs": {
          "properties": {
            "size": { "type": "integer", "index": "not_analyzed"},
            "bpp": { "type": "integer", "index": "not_analyzed"},
            "format": { "type": "string", "index": "not_analyzed"}
          }
        }
      }
    },
    "pipeline": {
      "dynamic" : false,
      "properties": {
        "_id": {
          "store": true,
          "index": "not_analyzed",
          "type": "string"
        },
        "name": {
          "type": "string",
          "index": "not_analyzed"
        },
        "timeCreated" : {
          "type" : "date"
        },
        "userCreated" : {
          "type" : "string",
          "index" : "not_analyzed"
        }
      }
    },
    "asset" : {
      "dynamic" : true,
      "properties" : {
        "_id": {
          "store": true,
          "index": "not_analyzed",
          "type": "string"
        },
        "timeCreated" : {
           "type" : "date"
        },
        "timeModified" : {
          "type" : "date"
        },
        "userCreated" : {
         "type" : "string",
         "index": "not_analyzed"
        },
        "userModified" : {
          "type" : "string",
          "index" : "not_analyzed"
        },
        "source" : {
          "type" : "object",
          "properties" : {
            "path": {
              "type": "string"
            },
            "size" : {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
