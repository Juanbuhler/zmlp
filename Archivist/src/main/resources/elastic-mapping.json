{
  "settings" : {
    "analysis" : {
      "analyzer" : {
        "stem" : {
          "tokenizer" : "standard",
          "filter" : ["standard", "lowercase", "stop", "porter_stem"]
        },
        "path-analyzer": {
          "type": "custom",
          "tokenizer": "path-tokenizer",
          "filter" : ["standard", "lowercase"]
        }
      },
       "tokenizer": {
        "path-tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "/"
        }
      }
    }
  },

  "mappings" : {
    "proxy-config": {
      "_all" : {"enabled" : false},
      "dynamic" : true,
      "properties": {
        "outputs": {
          "properties": {
            "size": { "type": "integer", "index": "not_analyzed"},
            "bpp": { "type": "integer", "index": "not_analyzed"},
            "format": { "type": "string", "index": "not_analyzed"}
          }
        }
      }
    },
    "pipeline": {
      "_all" : {"enabled" : false},
      "dynamic" : false,
      "properties": {
        "_id": {
          "store": true,
          "index": "not_analyzed",
          "type": "string"
        },
        "name": {
          "type": "string",
          "index": "not_analyzed"
        },
        "timeCreated" : {
          "type" : "date"
        },
        "userCreated" : {
          "type" : "string",
          "index" : "not_analyzed"
        }
      }
    },
    "user": {
      "_all" : {"enabled" : false},
      "dynamic" : false,
      "properties": {
        "_id": {
          "store": true,
          "index": "not_analyzed",
          "type": "string"
        },
        "password": {
          "store": true,
          "type": "string",
          "index": "not_analyzed"
        }
      }
    },
    "asset" : {
      "_all" : {"enabled" : false},
      "dynamic" : true,
      "properties" : {
        "_id": {
          "store": true,
          "index": "not_analyzed",
          "type": "string"
        },
        "timeCreated" : {
           "type" : "date"
        },
        "timeModified" : {
          "type" : "date"
        },
        "userCreated" : {
         "type" : "string",
         "index": "not_analyzed"
        },
        "userModified" : {
          "type" : "string",
          "index" : "not_analyzed"
        },
        "keywords": {
          "type": "string",
          "store": true
        },
        "keywords_suggest": {
          "type": "completion",
          "index_analyzer": "simple",
          "search_analyzer": "simple",
          "payloads": false
        },
        "iptc": {
          "type": "object",
          "properties" : {
            "keywords": {
              "type": "string",
              "copy_to": ["keywords", "keywords_suggest"]
            }
          }
        },
        "collections": {
          "type" : "string",
          "index": "not_analyzed"
        },
        "source" : {
          "type" : "object",
          "properties" : {
            "path": {
              "type": "multi_field",
              "fields" : {
                "path" : {
                  "type" : "string",
                  "index_analyzer": "path-analyzer",
                  "index" : "analyzed",
                  "copy_to": "keywords"
                },
                "untouched" : {
                  "type" : "string",
                  "index" : "not_analyzed"
                }
              }
            }
          }
        }
      }
    }
  }
}
