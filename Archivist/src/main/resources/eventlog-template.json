{
  "template": "eventlog_*",
  "aliases" : {
    "eventlog": {}
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "standard": {
          "tokenizer": "standard",
          "filter": [
            "delimiter_filter",
            "standard",
            "lowercase",
            "stop"
          ]
        }
      },
      "filter": {
        "delimiter_filter": {
          "type": "word_delimiter",
          "catenate_words": false,
          "preserve_original": true,
          "split_on_numerics": false,
          "generate_word_parts": true
        }
      }
    }
  },
  "mappings": {
    "event": {
      "dynamic": "strict",
      "_all": {
        "enabled": true
      },
      "_timestamp": {
        "enabled": false
      },
      "properties": {
        "timestamp": {
          "type": "date"
        },
        "id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "type": {
          "type": "string",
          "index": "not_analyzed"
        },
        "tags": {
          "type": "string",
          "index": "not_analyzed"
        },
        "message": {
          "type": "string",
          "index_analyzer": "standard",
          "search_analyzer": "simple"
        },
        "path": {
          "type": "string",
          "index": "not_analyzed"
        },
        "host": {
          "type": "string",
          "index": "not_analyzed",
          "include_in_all": false
        },
        "stack": {
          "type": "string",
          "index": "not_analyzed",
          "include_in_all": false
        }
      }
    }
  }
}
