{
  "template": "eventlog_*",
  "aliases" : {
    "eventlog": {}
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "standard": {
          "tokenizer": "standard",
          "filter": [
            "delimiter_filter",
            "standard",
            "lowercase"
          ]
        }
      },
      "filter": {
        "delimiter_filter": {
          "type": "word_delimiter",
          "catenate_words": false,
          "preserve_original": true,
          "split_on_numerics": false,
          "generate_word_parts": true
        }
      }
    }
  },
  "mappings": {
    "logs": {
      "_all": {
        "enabled": true
      },
      "_timestamp": {
        "enabled": false
      },
      "properties": {
        "timestamp": {
          "type": "date"
        },
        "action": {
          "type": "string",
          "index": "not_analyzed"
        },
        "message": {
          "type": "string",
          "analyzer": "standard",
          "search_analyzer": "simple"
        },
        "user": {
          "properties": {
            "username": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        }
      }
    }
  }
}
