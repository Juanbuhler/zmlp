{
  "migration": {
    "reindex": true,
    "reingest": false,
    "patch": 0
  },
  "settings": {
    "index": {
      "query": {
        "default_field": "keywords.all"
      }
    },
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "keyword",
          "filter": [
            "trim",
            "delimiter_filter",
            "lowercase",
            "porter_stem"
          ]
        },
        "content": {
          "tokenizer": "standard",
          "filter": [
            "trim",
            "lowercase",
            "stop"
          ]
        },
        "path_analyzer" : {
          "type" : "custom",
          "tokenizer" : "path_tokenizer"
        },
        "package_analyzer" : {
          "type" : "custom",
          "tokenizer" : "package_tokenizer"
        },
        "trim_analyzer" : {
          "type" : "custom",
          "tokenizer" : "keyword",
          "filter" : ["trim"]
        }
      },
      "filter": {
        "delimiter_filter": {
          "type": "word_delimiter",
          "preserve_original": "true"
        }
      },
      "tokenizer": {
        "path_tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "/"
        },
        "package_tokenizer" : {
          "type": "path_hierarchy",
          "delimiter": "."
        }
      }
    }
  },
  "mappings": {
    "asset": {
      "_all": {
        "enabled": false
      },
      "dynamic": true,
      "dynamic_date_formats": [
        "yyyy/MM/dd HH:mm:ss Z",
        "yyyy/MM/dd Z",
        "yyyy/MM/dd HH:mm:ss",
        "yyyy/MM/dd",
        "yyyy-MM-dd HH:mm:ss Z",
        "yyyy-MM-dd Z",
        "yyyy-MM-dd HH:mm:ss",
        "yyyy-MM-dd",
        "MM/dd/yyyy",
        "MM-dd-yyyy"
