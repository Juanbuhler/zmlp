              "type": "string",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "suggest": {
                  "type": "completion"
                }
              }
            }
          }
        },
        {
          "suggest_template": {
            "match_mapping_type": "string",
            "match": "suggest",
            "mapping": {
              "type": "completion"
            }
          }
        },
        {
