{
  "migration": {
    "reindex": true,
    "reingest": false
  },
  "settings": {
    "index": {
      "query": {
        "default_field": "keywords.all"
      }
    },
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "keyword",
          "filter": [
            "trim",
            "lowercase",
            "delimiter_filter"
          ]
        },
        "path_analyzer" : {
          "type" : "custom",
          "tokenizer" : "path_tokenizer"
        },
        "trim_analyzer" : {
          "type" : "custom",
          "tokenizer" : "keyword",
          "filter" : ["trim"]
        }
      },
      "filter": {
        "delimiter_filter": {
          "type": "word_delimiter",
          "preserve_original": "true"
        }
      },
      "tokenizer": {
        "path_tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "/"
        },
        "ngram_tokenizer": {
          "type": "edgeNGram",
          "min_gram": 3,
          "max_gram": 32,
          "token_chars": ["letter", "digit"]
        }
      }
    }
  },
  "mappings": {
    "note": {
      "_all": {
        "enabled": true
      },
      "dynamic": true,
      "_timestamp": {
        "enabled": false
      },
      "properties": {
        "_id": {
          "index": "not_analyzed",
          "type": "string"
        },
        "asset": {
          "index": "not_analyzed",
          "type": "string"
        },
        "text": {
          "index": "analyzed",
          "type": "string"
        },
        "annotations": {
          "type": "geo_shape",
          "tree": "quadtree",
          "tree_levels": 1
        }
      }
    },
    "asset": {
      "_all": {
        "enabled": false
      },
      "dynamic": true,
      "dynamic_date_formats": [
        "yyyy/MM/dd HH:mm:ss Z",
        "yyyy/MM/dd Z",
        "yyyy/MM/dd HH:mm:ss",
        "yyyy/MM/dd"
      ],
      "_timestamp": {
        "enabled": true
      },
      "properties": {
        "_id": {
          "index": "not_analyzed",
          "type": "string"
        },
        "keywords": {
          "dynamic": true,
          "properties": {
            "suggest": {
              "type": "completion",
              "analyzer": "simple",
              "search_analyzer": "simple",
              "payloads": false
            },
            "all": {
              "type": "string",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            }
          }
        },
        "links": {
          "properties": {
            "inputs": {
              "type": "string",
              "index": "not_analyzed"
            }
          },
          "properties": {
            "outputs": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "folders": {
          "type": "integer",
          "index": "not_analyzed"
        },
        "source": {
          "properties": {
            "date": {
              "type": "date",
              "index": "not_analyzed"
            },
            "directory": {
              "type": "string",
              "index": "analyzed",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "dir": {
                  "type": "string",
                  "analyzer": "path_analyzer"
                }
              }
            },
            "path": {
              "type": "string",
              "index" : "analyzed",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "dir": {
                  "type": "string",
                  "analyzer": "path_analyzer"
                }
              }
            }
          }
        },
        "permissions": {
          "properties": {
            "search": {
              "type": "integer",
              "index": "not_analyzed"
            },
            "export": {
              "type": "integer",
              "index": "not_analyzed"
            },
            "write": {
              "type": "integer",
              "index": "not_analyzed"
            }
          }
        },
        "exports": {
          "type": "integer",
          "index": "not_analyzed"
        },
        "imports": {
          "properties": {
            "id": {"type": "integer"},
            "pipelineId": {"type": "integer"},
            "timestamp": {"type": "date" }
          }
        },
        "colors": {
            "properties": {
              "original": {
                "type": "nested",
                "properties": {
                  "red": { "type": "integer" },
                  "green": { "type": "integer"},
                  "blue": {"type": "integer"},
                  "hue": {"type": "float"},
                  "saturation": {"type": "float"},
                  "brightness": {"type": "float"},
                  "ratio": {"type": "float"}
                }
              },
              "mapped": {
                "type": "nested",
                "properties": {
                  "red": { "type": "integer" },
                  "green": { "type": "integer"},
                  "blue": {"type": "integer"},
                  "hue": {"type": "float"},
                  "saturation": {"type": "float"},
                  "brightness": {"type": "float"},
                  "ratio": {"type": "float"}
                }
              }
            }
        }
      },
      "dynamic_templates": [
        {
          "time_template": {
            "match": ".+Time$",
            "match_mapping_type": "string",
            "mapping": {
              "type": "date"
            }
          }
        },
        {
          "shape_template": {
            "match": "^.+Shape$|^shape$",
            "mapping": {
              "type": "geo_shape"
            }
          }
        },
        {
          "point_template": {
            "match": "^.+Point|^point$",
            "match_mapping_type": "double",
            "mapping": {
              "type": "geo_point"
            }
          }
        },
        {
          "color_template": {
            "path_match": ".*colors.+$",
            "mapping": {
              "type": "nested"
            }
          }
        },
        {
          "string_template": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            }
          }
        }
      ]
    }
  }
}
